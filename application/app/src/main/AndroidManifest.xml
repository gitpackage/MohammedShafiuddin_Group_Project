<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group4.cs422.medicationmanager">
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="group4.cs422.medicationmanager.DisplayMedication" android:screenOrientation="portrait"></activity>
        <activity android:name="group4.cs422.medicationmanager.MainMenuActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="group4.cs422.medicationmanager.AddMedicationActivity" android:screenOrientation="portrait"/>
        <activity android:name="group4.cs422.medicationmanager.EditMedicationActivity" android:screenOrientation="portrait"/>
        <activity android:name="group4.cs422.medicationmanager.MedicationsListActivity" android:screenOrientation="portrait"/>
        <activity android:name="group4.cs422.medicationmanager.CalendarActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="group4.cs422.medicationmanager.SelectedDateActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="group4.cs422.medicationmanager.SettingsActivity" android:screenOrientation="portrait"/>
        <receiver android:name="group4.cs422.medicationmanager.AlarmReceiver"></receiver>
    </application>

</manifest>